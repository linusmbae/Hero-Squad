{{#partial "content"}}
    <h4><strong>Squad Details</strong></h4>
    <p>{{squad.name}}</p>
    <p>{{squad.cause}}</p>
    <p>
        {{#if squad.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a class="btn btn-success" href="/squads/{{squad.id}}/update">Edit</a>
        <a class="btn btn-danger"  href="/squads/{{squad.id}}/delete">DELETE (no undo)</a>
    </p>
{{/partial}}
{{>layout.hbs}}