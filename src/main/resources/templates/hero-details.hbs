{{#partial "content"}}
    <h4><strong>Hero Details</strong></h4>
    <p>{{hero.name}}</p>
    <p>{{hero.age}}</p>
    <p>{{hero.specialPowers}}</p>
    <p>{{hero.weakness}}</p>
    <p>
        {{#if hero.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
        <a class="btn btn-success" href="/heroes/{{hero.id}}/update">Edit</a>
        <a class="btn btn-danger"  href="/heroes/{{hero.id}}/delete">DELETE (no undo)</a>
    </p>
{{/partial}}
{{>layout.hbs}}