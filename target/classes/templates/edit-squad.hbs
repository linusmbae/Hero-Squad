{{#partial "content"}}
    {{#if editSquad}}
        <strong><h4>Edit Squad</h4></strong>
        <form action="/squads/{{editSquad.id}}/update" method="post">
            <div class="form-group">
                <input type="text" value="{{editSquad.name}}" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="{{editSquad.cause}}" name="cause" id="cause" class="form-control">
            </div>

            <button type="submit" class="btn btn-success form-control"><strong>Submit</strong></button>
        </form>
    {{/if}}
{{/partial}}
{{>layout.hbs}}