{{#partial "content"}}

    {{#if assign}}
            <form action="/heroes/{{assign.id}}/assign" method="post">
                <select name="squad" id="squad" class="form-control">
            {{#each squads}}
                    <option value="{{assign.name}}"></option>
            {{/each}}
                </select>
                <button type="submit" class="btn btn-success"><strong>Assign</strong></button>
            </form>
    {{else}}
        <p>select hero</p>
    {{/if}}
{{/partial}}
{{>layout.hbs}}