{{#partial "content"}}
    <h1>Assign Hero To A Squad</h1>
    {{#partial "col-md-4"}}
        {{#if heroes}}
            <h4>Registered Heroes</h4>
            {{#each heroes}}
                <p>{{name}}<a href="/heroes/{{id}}/assign"> Assign Hero</a></p>
            {{/each}}
        {{else}}
            <h4>No Registered Heroes</h4>
        {{/if}}
    {{/partial}}
{{/partial}}
{{>layout.hbs}}